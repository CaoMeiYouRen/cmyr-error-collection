{
  "name": "cmyr-error-collection",
  "version": "1.0.2",
  "description": "一个基于 leancloud 的简易全局错误捕获工具",
  "author": "CaoMeiYouRen",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production rollup -c",
    "postbuild": "npm run build:type",
    "build:type": "api-extractor run",
    "postbuild:type": "rimraf \"dist/**/!(*.js?(.map)|index.d.ts)\"",
    "analyzer": "cross-env NODE_ENV=production ANALYZER=true rollup -c",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "dev:rollup": "cross-env NODE_ENV=development rollup -c -w",
    "rm": "rimraf node_modules",
    "start": "node ./dist/index",
    "release": "semantic-release",
    "commit": "git add . && git cz",
    "test": "ts-node-dev test/index.test.ts",
    "browser": "browser-sync start --server --index index.html --files \"dist/**/*.js\"  --open local"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.18.19",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.176",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-cmyr-config": "^1.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "debug": "^4.3.2",
    "eslint": "^7.32.0",
    "eslint-config-cmyr": "^1.1.12",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^18.0.0",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "leancloud-storage": "^4.12.0"
  },
  "peerDependencies": {},
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "cross-env NODE_ENV=production eslint src *.js --fix --ext .ts,.js",
      "git add"
    ]
  }
}
